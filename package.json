{
    "name": "pausas-activas",
    "version": "1.0.0",
    "main": "dist/main.js",
    "scripts": {
      "build": "tsc",
      "start": "concurrently \"tsc -w\" \"electron .\"",
      "package": "electron-builder"
    },
    "build": {
      "appId": "com.tuempresa.pausasactivas",
      "productName": "Pausas Activas",
      "files": [
        "dist/**/*",
        "public/**/*",
        "package.json"
      ],
      "win": {
        "target": "nsis"
      }
    },
    "devDependencies": {
      "concurrently": "^8.2.0",
      "electron": "^28.2.3",
      "electron-builder": "^24.6.0",
      "typescript": "^5.4.3"
    }
  }
  